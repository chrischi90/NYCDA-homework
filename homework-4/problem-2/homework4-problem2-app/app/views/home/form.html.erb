<h1>Contact Us</h1>

<%= form_tag('/thanks') do %>
  <p>
    <%= label_tag(:name, 'Your Name') %>
    <%= text_field_tag(:name, nil, {placeholder: 'Write your name'}) %>
  </p>
  <p>
    <%= label_tag(:email, 'Your Email') %>
    <%= text_field_tag(:email, nil, {placeholder: 'Put your email here'}) %>
  </p>
  <p>
    <%= label_tag(:message) %>
    <%= text_area_tag(:message, nil, placeholder: 'Put your message here') %>
  </p>
  <p><%= submit_tag('Submit') %></p>
<% end %>
