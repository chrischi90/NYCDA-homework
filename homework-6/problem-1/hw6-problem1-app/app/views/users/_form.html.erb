<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@user) do |f| %>
  <p>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
  </p>
  <p>
    <%= f.label(:email) %>
    <%= f.text_field(:email) %>
  </p>
  <p><%= f.submit %></p>
<% end %>
