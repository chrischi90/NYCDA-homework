<h1>Contact Us</h1>
<%= form_tag('/thank-you') do %>
  <p>
    <%= label_tag(:email, 'Your Email') %>
    <%= text_field_tag(:email, nil, {:placeholder => 'Put your email here'}) %>
  </p>
  <p>
    <%= label_tag(:message) %>
    <%= text_field_tag(:message, nil, placeholder: 'Put your message here') %>
  </p>
  <p><%= submit_tag('Submit') %></p>
<% end %>
